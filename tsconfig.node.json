{
	"compilerOptions": {
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

		"target": "ES2023",
		"lib": ["ES2023"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,

		"types": ["node"],

		"strict": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true
	},
	"include": ["vite.config.ts", "vitest.config.ts", "scripts/**/*.ts"]
}
