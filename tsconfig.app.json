{
	"compilerOptions": {
		"target": "ES2023",
		"lib": ["ES2023", "DOM", "DOM.Iterable"],
		"jsx": "react-jsx",

		"module": "ESNext",
		"moduleResolution": "bundler",
		"noEmit": true,
		"skipLibCheck": true,
		"strict": true,

		"baseUrl": "src",
		"paths": {
			"@/*": ["*"],
			"@/components/*": ["components/*"],
			"@/pages/*": ["pages/*"],
			"@/shared/*": ["shared/*"],
			"@/lib/*": ["lib/*"],
			"@/app/*": ["app/*"],
			"@/assets/*": ["assets/*"]
		},

		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": ["src"]
}
